<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connected:"
            android:gravity="center"
            android:textColor="#fff"
            android:fontFamily="@font/client"

            android:textSize="48dp"/>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/textView2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wherever"
                android:layout_marginEnd="5dp"
                android:textColor="#fff"
                android:textSize="40dp"
                android:fontFamily="@font/client"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="you are."
                android:layout_marginStart="5dp"
                android:textStyle="bold"

                android:textColor="#3F8CFF"
                android:fontFamily="@font/client"
                android:textSize="40dp" />
        </LinearLayout>

        <TextView
            android:layout_below="@+id/linear1"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:fontFamily="@font/client"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text="Keeping you connected to the\n other end of the line,wherever you are"
            android:textColor="#fff"

            android:textSize="16sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="56dp"
            android:layout_below="@+id/text2"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:background="@drawable/radius"
                android:backgroundTint="#252527"
                android:layout_height="69dp"
                android:fontFamily="@font/client"
                android:paddingLeft="16dp"
                android:visibility="visible"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Enter Meeting ID:"
                android:textColorHint="#7A8185"
                android:textColor="#fff" />

            <Button
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/radius"
                android:ems="10"
                android:visibility="visible"
                android:fontFamily="@font/client"
                android:textSize="16sp"
                android:onClick="onButtonClick"
                android:inputType="textPersonName"
                android:text="Join your Calyr Meeting"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="center" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="184dp"
            android:layout_height="33dp"
            android:visibility="visible"
            android:src="@drawable/rightwatermark"
            />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Want even more features?"
            android:textAlignment="center"
            android:textColor="#fff"
            android:visibility="visible"
            android:textSize="15dp"
            android:fontFamily="@font/client"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Purchase Calyr Pro!"
            android:textAlignment="center"
            android:textColor="#3F8CFF"
            android:visibility="visible"
            android:textSize="15dp"
            android:fontFamily="@font/client"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>